{
  "exclude": ["node_modules"],
  "include": ["script"],
  "compilerOptions": {
    "lib": ["ES2015"],
    "strict": true,
    "jsxFactory": "h",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "checkJs": true,
    "alwaysStrict": true,
    "resolveJsonModule": true
  }
}