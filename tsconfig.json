{
  "exclude": ["node_modules"],
  "include": ["script"],
  "compilerOptions": {
    "lib": ["ES2015"],
    "strict": true,
    "target": "es5",
    "jsxFactory": "h",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "checkJs": true,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "types": ["./script/script.d.ts", "./script/loader.d.ts"]
  }
}